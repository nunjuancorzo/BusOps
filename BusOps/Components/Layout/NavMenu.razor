@code {
    private string username = "Admin";
    private string userRole = "Usuario";
    private bool hasCheckedAuth = false;
    private bool showUserInfo = false;
    private List<Empresa> empresas = new();
    private int? empresaSeleccionada = null;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasCheckedAuth)
        {
            hasCheckedAuth = true;
            var usernameResult = await SessionStorage.GetAsync<string>("username");
            var roleResult = await SessionStorage.GetAsync<string>("userRole");
            var empresaIdResult = await SessionStorage.GetAsync<int?>("EmpresaId");
            
            Console.WriteLine($"🔐 NAVMENU - OnAfterRenderAsync");
            Console.WriteLine($"   username: '{usernameResult.Value ?? "NULL"}'");
            Console.WriteLine($"   userRole: '{roleResult.Value ?? "NULL"}'");
            Console.WriteLine($"   EmpresaId: {empresaIdResult.Value?.ToString() ?? "NULL"}");
            Console.WriteLine($"   Roles.SuperAdministrador: '{Roles.SuperAdministrador}'");
            
            if (usernameResult.Success && !string.IsNullOrEmpty(usernameResult.Value))
            {
                username = usernameResult.Value;
                showUserInfo = true;
            }
            
            if (roleResult.Success && !string.IsNullOrEmpty(roleResult.Value))
            {
                userRole = roleResult.Value;
                
                Console.WriteLine($"   userRole == Roles.SuperAdministrador: {userRole == Roles.SuperAdministrador}");
                Console.WriteLine($"   userRole == Roles.Administrador: {userRole == Roles.Administrador}");
                
                // Cargar empresas para SuperAdmin y Administrador
                if (userRole == Roles.SuperAdministrador || userRole == Roles.Administrador)
                {
                    await CargarEmpresas();
                }
            }
            
            if (empresaIdResult.Success)
            {
                empresaSeleccionada = empresaIdResult.Value;
            }
            
            StateHasChanged();
        }
    }

    private async Task CargarEmpresas()
    {
        try
        {
            using var context = await DbFactory.CreateDbContextAsync();
            
            if (userRole == Roles.SuperAdministrador)
            {
                // SuperAdmin ve todas las empresas
                context.IsSuperAdmin = true;
                empresas = await context.Empresas
                    .Where(e => e.Activa)
                    .OrderBy(e => e.NombreComercial)
                    .ToListAsync();
            }
            else if (userRole == Roles.Administrador && empresaSeleccionada.HasValue)
            {
                // Administrador solo ve su empresa
                context.CurrentEmpresaId = empresaSeleccionada;
                empresas = await context.Empresas
                    .Where(e => e.Activa && e.Id == empresaSeleccionada.Value)
                    .ToListAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando empresas: {ex.Message}");
        }
    }

    private async Task CambiarEmpresa(ChangeEventArgs e)
    {
        var empresaIdStr = e.Value?.ToString();
        
        if (string.IsNullOrEmpty(empresaIdStr))
        {
            // Ver todas las empresas (sin filtro)
            await SessionStorage.DeleteAsync("EmpresaId");
            empresaSeleccionada = null;
        }
        else
        {
            var empresaId = int.Parse(empresaIdStr);
            await SessionStorage.SetAsync("EmpresaId", empresaId);
            empresaSeleccionada = empresaId;
        }
        
        // Recargar la página para aplicar el filtro
        NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
    }
    
    private async Task CambiarEmpresaModal(int? empresaId)
    {
        Console.WriteLine($"🔄 CambiarEmpresaModal - EmpresaId solicitado: {empresaId?.ToString() ?? "NULL (ver todas)"}");
        
        if (!empresaId.HasValue)
        {
            // Ver todas las empresas (sin filtro)
            await SessionStorage.DeleteAsync("EmpresaId");
            empresaSeleccionada = null;
            Console.WriteLine($"✅ EmpresaId eliminado de SessionStorage");
        }
        else
        {
            await SessionStorage.SetAsync("EmpresaId", empresaId.Value);
            empresaSeleccionada = empresaId;
            Console.WriteLine($"✅ EmpresaId guardado en SessionStorage: {empresaId.Value}");
        }
        
        Console.WriteLine($"🔄 Navegando a / con forceLoad: true");
        // Recargar la página para aplicar el filtro
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    private async Task Logout()
    {
        await SessionStorage.DeleteAsync("isAuthenticated");
        await SessionStorage.DeleteAsync("username");
        await SessionStorage.DeleteAsync("userRole");
        await SessionStorage.DeleteAsync("userId");
        await SessionStorage.DeleteAsync("EmpresaId");
        NavigationManager.NavigateTo("/login", forceLoad: true);
    }
}

