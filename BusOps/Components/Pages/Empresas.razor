@page "/empresas"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.EntityFrameworkCore
@using BusOps.Data
@using BusOps.Models
@inject IDbContextFactory<BusOpsDbContext> DbFactory
@inject ProtectedSessionStorage SessionStorage
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Gesti√≥n de Empresas - BusOps</PageTitle>

@if (!isSuperAdmin)
{
    <div class="alert alert-danger">
        <i class="bi bi-shield-exclamation"></i>
        Acceso denegado. Esta secci√≥n es solo para Super Administradores.
    </div>
}
else
{
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-building"></i> Gesti√≥n de Empresas</h2>
            <button class="btn btn-primary" @onclick="NuevaEmpresa">
                <i class="bi bi-plus-circle"></i> Nueva Empresa
            </button>
        </div>

        @if (empresas == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (empresas.Count == 0)
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                No hay empresas registradas. Haz clic en "Nueva Empresa" para agregar una.
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre Comercial</th>
                                    <th>Slug</th>
                                    <th>Plan</th>
                                    <th>Estado</th>
                                    <th>Fecha Alta</th>
                                    <th>Usuarios</th>
                                    <th>L√≠mites</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var empresa in empresas)
                                {
                                    <tr>
                                        <td>@empresa.Id</td>
                                        <td>
                                            <strong>@empresa.NombreComercial</strong>
                                        </td>
                                        <td>
                                            <code>@empresa.Slug</code>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@empresa.PlanSuscripcion</span>
                                        </td>
                                        <td>
                                            @if (empresa.Activa)
                                            {
                                                <span class="badge bg-success">Activa</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactiva</span>
                                            }
                                        </td>
                                        <td>@empresa.FechaAlta.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-secondary">@empresa.Usuarios.Count</span>
                                        </td>
                                        <td>
                                            <small>
                                                U: @(empresa.MaxUsuarios?.ToString() ?? "‚àû")<br/>
                                                A: @(empresa.MaxAutobuses?.ToString() ?? "‚àû")<br/>
                                                C: @(empresa.MaxConductores?.ToString() ?? "‚àû")
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-primary" @onclick="() => VerDetalle(empresa.Id)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-warning" @onclick="() => EditarEmpresa(empresa.Id)">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                @if (empresa.Activa)
                                                {
                                                    <button class="btn btn-sm btn-danger" @onclick="() => DesactivarEmpresa(empresa.Id)">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-success" @onclick="() => ActivarEmpresa(empresa.Id)">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Empresa> empresas = new();
    private bool isSuperAdmin = false;
    private bool hasLoaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasLoaded)
        {
            hasLoaded = true;
            await VerificarPermisos();
            
            if (isSuperAdmin)
            {
                await CargarEmpresas();
            }
            
            StateHasChanged();
        }
    }

    private async Task VerificarPermisos()
    {
        try
        {
            var roleResult = await SessionStorage.GetAsync<string>("userRole");
            
            Console.WriteLine($"üîê EMPRESAS - Verificando permisos");
            Console.WriteLine($"   roleResult.Success: {roleResult.Success}");
            Console.WriteLine($"   roleResult.Value: '{roleResult.Value ?? "NULL"}'");
            Console.WriteLine($"   Roles.SuperAdministrador: '{Roles.SuperAdministrador}'");
            Console.WriteLine($"   Son iguales: {roleResult.Success && roleResult.Value == Roles.SuperAdministrador}");
            
            isSuperAdmin = roleResult.Success && roleResult.Value == Roles.SuperAdministrador;
            Console.WriteLine($"   isSuperAdmin final: {isSuperAdmin}");
            
            if (!isSuperAdmin)
            {
                var authResult = await SessionStorage.GetAsync<bool>("isAuthenticated");
                if (!authResult.Success || !authResult.Value)
                {
                    NavigationManager.NavigateTo("/login");
                }
            }
        }
        catch
        {
            NavigationManager.NavigateTo("/login");
        }
    }

    private async Task CargarEmpresas()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        context.IsSuperAdmin = true; // Desactivar filtros
        
        empresas = await context.Empresas
            .Include(e => e.ConfiguracionEmpresa)
            .Include(e => e.Usuarios)
            .OrderByDescending(e => e.Activa)
            .ThenBy(e => e.NombreComercial)
            .ToListAsync();
    }

    private void NuevaEmpresa()
    {
        NavigationManager.NavigateTo("/empresas/nueva");
    }

    private void VerDetalle(int id)
    {
        NavigationManager.NavigateTo($"/empresas/{id}");
    }

    private void EditarEmpresa(int id)
    {
        NavigationManager.NavigateTo($"/empresas/editar/{id}");
    }

    private async Task DesactivarEmpresa(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "¬øEst√° seguro de desactivar esta empresa?\n\nLos usuarios de la empresa no podr√°n acceder, pero todos los datos se conservar√°n y podr√°s reactivarla en cualquier momento."))
        {
            using var context = await DbFactory.CreateDbContextAsync();
            context.IsSuperAdmin = true;
            
            var empresa = await context.Empresas.FindAsync(id);
            if (empresa != null)
            {
                empresa.Activa = false;
                empresa.FechaBaja = DateTime.Now;
                await context.SaveChangesAsync();
                await CargarEmpresas();
            }
        }
    }

    private async Task ActivarEmpresa(int id)
    {
        using var context = await DbFactory.CreateDbContextAsync();
        context.IsSuperAdmin = true;
        
        var empresa = await context.Empresas.FindAsync(id);
        if (empresa != null)
        {
            empresa.Activa = true;
            empresa.FechaBaja = null;
            await context.SaveChangesAsync();
            await CargarEmpresas();
        }
    }
}
