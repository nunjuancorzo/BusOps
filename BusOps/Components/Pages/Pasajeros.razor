@page "/pasajeros"
@using Microsoft.EntityFrameworkCore
@using BusOps.Data
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject IJSRuntime JSRuntime
@inject IDbContextFactory<BusOpsDbContext> DbFactory
@inject ProtectedSessionStorage SessionStorage
@rendermode InteractiveServer

<PageTitle>Pasajeros</PageTitle>

<div class="mb-3">
    <button class="btn" style="background-color: #003366; color: white;" data-bs-toggle="modal" data-bs-target="#pasajeroModal" @onclick="MostrarFormularioNuevo">
        <span class="bi bi-plus-circle"></span> Nuevo Pasajero
    </button>
</div>

<!-- Modal Pasajero -->
<div class="modal fade" id="pasajeroModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="max-height: 90vh; display: flex; flex-direction: column;">
            <div class="modal-header text-white" style="flex-shrink: 0; background-color: #BA68C8;">
                <h5 class="modal-title">@(pasajeroSeleccionado.Id > 0 ? "Editar Pasajero" : "Nuevo Pasajero")</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <!-- Fila de botones fija -->
            <div class="border-bottom p-2" style="flex-shrink: 0; background-color: #f8f9fa;">
                <div class="d-flex gap-2 justify-content-end">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn" style="background-color: #003366; color: white;" @onclick="GuardarPasajero">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </div>
            <div class="modal-body" style="flex: 1; overflow-y: auto;">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nombre *</label>
                        <input type="text" class="form-control" @bind="pasajeroSeleccionado!.Nombre" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Apellidos *</label>
                        <input type="text" class="form-control" @bind="pasajeroSeleccionado!.Apellidos" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">DNI *</label>
                        <input type="text" class="form-control" @bind="pasajeroSeleccionado!.DNI" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" @bind="pasajeroSeleccionado!.Telefono" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" @bind="pasajeroSeleccionado!.Email" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Fecha de Nacimiento *</label>
                        <input type="date" class="form-control" @bind="fechaNacimiento" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Lista de Pasajeros</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Buscar por nombre, DNI o email..." @bind="terminoBusqueda" @bind:event="oninput" />
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>DNI</th>
                        <th>Fecha Nacimiento</th>
                        <th>Edad</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Reservas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pasajero in PasajerosFiltrados)
                    {
                        var edad = CalcularEdad(pasajero.FechaNacimiento);
                        var numReservas = reservas.Count(r => r.PasajeroId == pasajero.Id);
                        
                        <tr style="cursor: pointer;" @ondblclick="() => EditarPasajeroDobleClick(pasajero)" title="Doble click para editar">
                            <td><strong>@pasajero.Nombre @pasajero.Apellidos</strong></td>
                            <td>@pasajero.DNI</td>
                            <td>@pasajero.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                            <td>@edad años</td>
                            <td>@pasajero.Telefono</td>
                            <td>@pasajero.Email</td>
                            <td>
                                @if (numReservas > 0)
                                {
                                    <span class="badge bg-primary" style="cursor: pointer;" @onclick="() => VerReservas(pasajero)">
                                        @numReservas
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#pasajeroModal" @onclick="() => EditarPasajero(pasajero)" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="async () => await EliminarPasajero(pasajero.Id)" title="Eliminar">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!PasajerosFiltrados.Any())
            {
                <p class="text-center text-muted py-4">No hay pasajeros registrados</p>
            }
        </div>
    </div>
</div>

@if (pasajeroSeleccionadoReservas != null)
{
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Historial de Reservas: @pasajeroSeleccionadoReservas.Nombre @pasajeroSeleccionadoReservas.Apellidos</h5>
            <button class="btn btn-sm btn-secondary" @onclick="CerrarReservas">
                <span class="bi bi-x-lg"></span>
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Ruta</th>
                            <th>Fecha Salida</th>
                            <th>Asiento</th>
                            <th>Precio</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in reservasPasajero.OrderByDescending(r => r.FechaReserva))
                        {
                            var viaje = viajes.FirstOrDefault(v => v.Id == reserva.ViajeId);
                            var ruta = rutas.FirstOrDefault(r => r.Id == viaje?.RutaId);
                            
                            <tr>
                                <td>@reserva.CodigoReserva</td>
                                <td>@ruta?.Nombre</td>
                                <td>@viaje?.FechaHoraSalida.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@reserva.NumeroAsiento</td>
                                <td>@reserva.PrecioPagado.ToString("C2")</td>
                                <td>
                                    <span class="badge @ObtenerClaseEstadoReserva(reserva.Estado)">
                                        @reserva.Estado
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!reservasPasajero.Any())
                {
                    <p class="text-center text-muted py-3">Este pasajero no tiene reservas</p>
                }
            </div>
        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h5 class="card-title">Total Pasajeros</h5>
                <h2 class="text-primary">@pasajeros.Count</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h5 class="card-title">Con Reservas</h5>
                <h2 class="text-success">@pasajeros.Count(p => reservas.Any(r => r.PasajeroId == p.Id))</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h5 class="card-title">Nuevos (este mes)</h5>
                <h2 class="text-info">@pasajeros.Count(p => p.Id > 0)</h2>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Pasajero> pasajeros = new();
    private List<Reserva> reservas = new();
    private List<Viaje> viajes = new();
    private List<Ruta> rutas = new();
    private List<Reserva> reservasPasajero = new();
    private Pasajero pasajeroSeleccionado = new();
    private Pasajero? pasajeroSeleccionadoReservas;
    private DateTime fechaNacimiento = DateTime.Now.AddYears(-30);
    private string terminoBusqueda = string.Empty;
    
    private bool IsSuperAdmin = false;
    private int? CurrentEmpresaId = null;
    private bool firstRender = true;

    private IEnumerable<Pasajero> PasajerosFiltrados
    {
        get
        {
            if (string.IsNullOrWhiteSpace(terminoBusqueda))
                return pasajeros;

            var termino = terminoBusqueda.ToLower();
            return pasajeros.Where(p =>
                p.Nombre.ToLower().Contains(termino) ||
                p.Apellidos.ToLower().Contains(termino) ||
                p.DNI.ToLower().Contains(termino) ||
                p.Email.ToLower().Contains(termino));
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            this.firstRender = false;
            
            var empresaIdResult = await SessionStorage.GetAsync<int>("EmpresaId");
            CurrentEmpresaId = empresaIdResult.Success ? empresaIdResult.Value : null;
            
            var userRoleResult = await SessionStorage.GetAsync<string>("userRole");
            if (userRoleResult.Success)
            {
                IsSuperAdmin = userRoleResult.Value == "SuperAdministrador";
            }
            
            await CargarPasajeros();
            await CargarReservas();
            StateHasChanged();
        }
    }

    private async Task CargarPasajeros()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        context.IsSuperAdmin = IsSuperAdmin;
        context.CurrentEmpresaId = CurrentEmpresaId;
        pasajeros = await context.Pasajeros.ToListAsync();
    }

    private async Task CargarReservas()
    {
        using var context = await DbFactory.CreateDbContextAsync();
        context.IsSuperAdmin = IsSuperAdmin;
        context.CurrentEmpresaId = CurrentEmpresaId;
        reservas = await context.Reservas
            .Include(r => r.Viaje)
            .ThenInclude(v => v.Ruta)
            .ToListAsync();
    }

    private void MostrarFormularioNuevo()
    {
        pasajeroSeleccionado = new Pasajero();
        fechaNacimiento = DateTime.Now.AddYears(-30);
    }

    private async Task EditarPasajeroInterno(Pasajero pasajero)
    {
        using var context = await DbFactory.CreateDbContextAsync();
        context.IsSuperAdmin = IsSuperAdmin;
        context.CurrentEmpresaId = CurrentEmpresaId;
        
        var pasajeroCompleto = await context.Pasajeros.FindAsync(pasajero.Id);
        
        if (pasajeroCompleto != null)
        {
            pasajeroSeleccionado = new Pasajero
            {
                Id = pasajeroCompleto.Id,
                Nombre = pasajeroCompleto.Nombre,
                Apellidos = pasajeroCompleto.Apellidos,
                DNI = pasajeroCompleto.DNI,
                Telefono = pasajeroCompleto.Telefono,
                Email = pasajeroCompleto.Email,
                FechaNacimiento = pasajeroCompleto.FechaNacimiento
            };
            fechaNacimiento = pasajeroCompleto.FechaNacimiento;
        }
    }
    
    private void EditarPasajero(Pasajero pasajero)
    {
        pasajeroSeleccionado = new Pasajero
        {
            Id = pasajero.Id,
            Nombre = pasajero.Nombre,
            Apellidos = pasajero.Apellidos,
            DNI = pasajero.DNI,
            Telefono = pasajero.Telefono,
            Email = pasajero.Email,
            FechaNacimiento = pasajero.FechaNacimiento
        };
        fechaNacimiento = pasajero.FechaNacimiento;
    }

    private async Task GuardarPasajero()
    {
        pasajeroSeleccionado.FechaNacimiento = fechaNacimiento;

        using (var context = await DbFactory.CreateDbContextAsync())
        {
            context.IsSuperAdmin = IsSuperAdmin;
            context.CurrentEmpresaId = CurrentEmpresaId;
            
            if (pasajeroSeleccionado.Id == 0)
            {
                if (CurrentEmpresaId.HasValue)
                {
                    pasajeroSeleccionado.EmpresaId = CurrentEmpresaId.Value;
                }
                context.Pasajeros.Add(pasajeroSeleccionado);
            }
            else
            {
                // Para evitar problemas de tracking, obtener el pasajero del contexto y actualizar sus propiedades
                var pasajeroExistente = await context.Pasajeros.FindAsync(pasajeroSeleccionado.Id);
                if (pasajeroExistente != null)
                {
                    pasajeroExistente.Nombre = pasajeroSeleccionado.Nombre;
                    pasajeroExistente.Apellidos = pasajeroSeleccionado.Apellidos;
                    pasajeroExistente.DNI = pasajeroSeleccionado.DNI;
                    pasajeroExistente.Telefono = pasajeroSeleccionado.Telefono;
                    pasajeroExistente.Email = pasajeroSeleccionado.Email;
                    pasajeroExistente.FechaNacimiento = pasajeroSeleccionado.FechaNacimiento;
                }
            }
            
            await context.SaveChangesAsync();
        }
        
        await JSRuntime.InvokeVoidAsync("eval", "bootstrap.Modal.getInstance(document.getElementById('pasajeroModal')).hide()");
        pasajeroSeleccionado = new Pasajero();
        await CargarPasajeros();
        StateHasChanged();
    }

    private async Task EliminarPasajero(int id)
    {
        using var context = await DbFactory.CreateDbContextAsync();
        context.IsSuperAdmin = IsSuperAdmin;
        context.CurrentEmpresaId = CurrentEmpresaId;
        var pasajero = await context.Pasajeros.FindAsync(id);
        if (pasajero != null)
        {
            // Verificar si tiene reservas
            var tieneReservas = await context.Reservas.AnyAsync(r => r.PasajeroId == id);
            if (!tieneReservas)
            {
                context.Pasajeros.Remove(pasajero);
                await context.SaveChangesAsync();
                await CargarPasajeros();
                StateHasChanged();
            }
        }
    }

    private void VerReservas(Pasajero pasajero)
    {
        pasajeroSeleccionadoReservas = pasajero;
        reservasPasajero = reservas.Where(r => r.PasajeroId == pasajero.Id).ToList();
    }

    private void CerrarReservas()
    {
        pasajeroSeleccionadoReservas = null;
        reservasPasajero.Clear();
    }

    private int CalcularEdad(DateTime fechaNacimiento)
    {
        var edad = DateTime.Now.Year - fechaNacimiento.Year;
        if (DateTime.Now.DayOfYear < fechaNacimiento.DayOfYear)
            edad--;
        return edad;
    }

    private string ObtenerClaseEstadoReserva(EstadoReserva estado)
    {
        return estado switch
        {
            EstadoReserva.Pendiente => "bg-warning",
            EstadoReserva.Confirmada => "bg-info",
            EstadoReserva.Pagada => "bg-success",
            EstadoReserva.Cancelada => "bg-danger",
            EstadoReserva.Utilizada => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private async Task EditarPasajeroDobleClick(Pasajero pasajero)
    {
        EditarPasajero(pasajero);
        await JSRuntime.InvokeVoidAsync("eval", "new bootstrap.Modal(document.getElementById('pasajeroModal')).show()");
    }
}
