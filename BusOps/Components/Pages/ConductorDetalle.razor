@page "/conductores/nuevo"
@page "/conductores/{Id:int}"
@using BusOps.Models
@using BusOps.Helpers
@using BusOps.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager NavigationManager
@inject IDbContextFactory<BusOpsDbContext> DbFactory
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>@(Id == 0 ? "Nuevo Conductor" : "Editar Conductor") - BusOps</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@(Id == 0 ? "Nuevo Conductor" : "Editar Conductor")</h1>
    <button class="btn btn-outline-secondary" @onclick="Volver">
        <i class="bi bi-arrow-left"></i> Volver
    </button>
</div>

@if (Id == 0)
{
    <!-- Formulario para nuevo conductor (sin pestañas) -->
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Nombre *</label>
                    <input type="text" class="form-control" @bind="conductor.Nombre" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Apellidos *</label>
                    <input type="text" class="form-control" @bind="conductor.Apellidos" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">DNI *</label>
                    <input type="text" class="form-control" @bind="conductor.DNI" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Número de Licencia *</label>
                    <input type="text" class="form-control" @bind="conductor.NumeroLicencia" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Fecha Vencimiento Licencia *</label>
                    <input type="date" class="form-control" @bind="fechaVencimientoLicencia" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Teléfono</label>
                    <input type="tel" class="form-control" @bind="conductor.Telefono" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" @bind="conductor.Email" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Fecha de Contratación</label>
                    <input type="date" class="form-control" @bind="fechaContratacion" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Estado *</label>
                    <select class="form-select" @bind="conductor.Estado">
                        @foreach (var estado in Enum.GetValues<EstadoConductor>())
                        {
                            <option value="@estado">@estado.GetDisplayName()</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="form-label">Autobús Asignado</label>
                    <select class="form-select" @bind="conductor.AutobusId">
                        <option value="">-- Sin autobús asignado --</option>
                        @foreach (var autobus in autobuses)
                        {
                            <option value="@autobus.Id">@autobus.Matricula - @autobus.Marca @autobus.Modelo (@autobus.CapacidadPasajeros plazas)</option>
                        }
                    </select>
                    <small class="text-muted">Selecciona el autobús que conducirá habitualmente este conductor</small>
                </div>
            </div>
            <div class="d-flex gap-2 mt-3">
                <button class="btn btn-primary" @onclick="Guardar">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <button class="btn btn-secondary" @onclick="Volver">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
}
else
{
    <!-- Pestañas para conductor existente -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <button class="nav-link @(tabActiva == "datos" ? "active" : "")" @onclick='() => CambiarTab("datos")'>
                <i class="bi bi-person-fill me-2"></i>Datos del Conductor
