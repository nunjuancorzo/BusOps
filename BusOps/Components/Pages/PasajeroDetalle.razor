@page "/pasajeros/nuevo"
@page "/pasajeros/{Id:int}"
@using BusOps.Models
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>@(Id == 0 ? "Nuevo Pasajero" : "Editar Pasajero") - BusOps</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@(Id == 0 ? "Nuevo Pasajero" : "Editar Pasajero")</h1>
    <button class="btn btn-outline-secondary" @onclick="Volver">
        <i class="bi bi-arrow-left"></i> Volver
    </button>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Nombre *</label>
                <input type="text" class="form-control" @bind="pasajero.Nombre" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Apellidos *</label>
                <input type="text" class="form-control" @bind="pasajero.Apellidos" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">DNI *</label>
                <input type="text" class="form-control" @bind="pasajero.DNI" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Teléfono</label>
                <input type="tel" class="form-control" @bind="pasajero.Telefono" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" @bind="pasajero.Email" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Fecha de Nacimiento *</label>
                <input type="date" class="form-control" @bind="fechaNacimiento" />
            </div>
        </div>
        <div class="d-flex gap-2 mt-3">
            <button class="btn btn-primary" @onclick="Guardar">
                <i class="bi bi-save"></i> Guardar
            </button>
            <button class="btn btn-secondary" @onclick="Volver">
                Cancelar
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Pasajero pasajero = new();
    private DateTime fechaNacimiento = DateTime.Now.AddYears(-30);

    protected override void OnInitialized()
    {
        if (Id > 0)
        {
            // TODO: Cargar desde base de datos
            pasajero = new Pasajero
            {
                Id = Id,
                Nombre = "María",
                Apellidos = "González Sánchez",
                DNI = "87654321B",
                Telefono = "666777888",
                Email = "maria.gonzalez@email.com",
                FechaNacimiento = new DateTime(1990, 5, 15)
            };
            fechaNacimiento = pasajero.FechaNacimiento;
        }
        else
        {
            pasajero = new Pasajero();
        }
    }

    private void Guardar()
    {
        pasajero.FechaNacimiento = fechaNacimiento;
        // TODO: Guardar en base de datos
        NavigationManager.NavigateTo("/pasajeros");
    }

    private void Volver()
    {
        NavigationManager.NavigateTo("/pasajeros");
    }
}
