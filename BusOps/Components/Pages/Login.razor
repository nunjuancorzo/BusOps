@page "/login"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using BusOps.Data
@using BusOps.Models
@using Microsoft.EntityFrameworkCore
@inject ProtectedSessionStorage SessionStorage
@inject ProtectedLocalStorage LocalStorage
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IDbContextFactory<BusOpsDbContext> DbFactory
@rendermode InteractiveServer

<PageTitle>BusOps - Login</PageTitle>

<style>
    .login-container {
        min-height: 100vh;
        height: 100vh;
        width: 100vw;
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        overflow: hidden;
        background: linear-gradient(-45deg, #E3F2FD, #BBDEFB, #E1BEE7, #F3E5F5);
        background-size: 400% 400%;
        animation: gradientShift 15s ease infinite;
    }

    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 1;
    }

    .shape {
        position: absolute;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
        width: 300px;
        height: 300px;
        top: 10%;
        left: 10%;
        animation-delay: 0s;
        animation-duration: 25s;
    }

    .shape-2 {
        width: 200px;
        height: 200px;
        top: 60%;
        right: 15%;
        animation-delay: 5s;
        animation-duration: 20s;
    }

    .shape-3 {
        width: 150px;
        height: 150px;
        bottom: 20%;
        left: 20%;
        animation-delay: 2s;
        animation-duration: 18s;
    }

    .shape-4 {
        width: 250px;
        height: 250px;
        top: 30%;
        right: 25%;
        animation-delay: 7s;
        animation-duration: 22s;
    }

    .shape-5 {
        width: 180px;
        height: 180px;
        bottom: 10%;
        right: 10%;
        animation-delay: 3s;
        animation-duration: 19s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
            opacity: 0.3;
        }
        25% {
            transform: translate(30px, -30px) rotate(90deg);
            opacity: 0.5;
        }
        50% {
            transform: translate(-20px, 20px) rotate(180deg);
            opacity: 0.4;
        }
        75% {
            transform: translate(20px, 30px) rotate(270deg);
            opacity: 0.6;
        }
    }

    .login-card {
        position: relative;
        z-index: 10;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        animation: fadeInUp 0.8s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }
</style>

<div class="login-container">
    <!-- Formas flotantes de fondo -->
    <div class="floating-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
        <div class="shape shape-5"></div>
    </div>

    <div class="card shadow-lg login-card" style="width: 400px; border-radius: 15px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <div class="d-flex justify-content-center mb-3">
                    <img src="/logo-busopsnew.jpg" alt="BusOps Logo" style="height: 120px; border-radius: 10px;" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                </div>
            }

            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label fw-semibold">Usuario</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <InputText @bind-Value="loginModel.Username" class="form-control" placeholder="Ingrese su usuario" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Username)" />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Contrase√±a</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <InputText type="password" @bind-Value="loginModel.Password" class="form-control" placeholder="Ingrese su contrase√±a" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Password)" />
                </div>

                <div class="mb-3 form-check">
                    <InputCheckbox id="rememberMe" class="form-check-input" @bind-Value="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        Recordar mis datos
                    </label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Iniciando sesi√≥n...</span>
                    }
                    else
                    {
                        <span>Iniciar Sesi√≥n</span>
                    }
                </button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private bool hasChecked = false;
    private bool rememberMe = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasChecked)
        {
            hasChecked = true;
            
            try
            {
                // Cargar credenciales guardadas si existen
                var savedUsername = await LocalStorage.GetAsync<string>("savedUsername");
                var savedPassword = await LocalStorage.GetAsync<string>("savedPassword");
                var savedRememberMe = await LocalStorage.GetAsync<bool>("rememberMe");

                if (savedRememberMe.Success && savedRememberMe.Value)
                {
                    rememberMe = true;
                    if (savedUsername.Success && !string.IsNullOrEmpty(savedUsername.Value))
                    {
                        loginModel.Username = savedUsername.Value;
                    }
                    if (savedPassword.Success && !string.IsNullOrEmpty(savedPassword.Value))
                    {
                        loginModel.Password = savedPassword.Value;
                    }
                    StateHasChanged();
                }
                
                // Verificar si ya hay una sesi√≥n activa
                var result = await SessionStorage.GetAsync<bool>("isAuthenticated");
                if (result.Success && result.Value)
                {
                    NavigationManager.NavigateTo("/");
                }
            }
            catch (System.Security.Cryptography.CryptographicException)
            {
                // Si hay un error criptogr√°fico, limpiar el storage y continuar
                try
                {
                    await LocalStorage.DeleteAsync("savedUsername");
                    await LocalStorage.DeleteAsync("savedPassword");
                    await LocalStorage.DeleteAsync("rememberMe");
                    await SessionStorage.DeleteAsync("isAuthenticated");
                }
                catch { }
            }
            catch (Exception)
            {
                // Ignorar otros errores al cargar datos del storage
            }
        }
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        // Simular delay de autenticaci√≥n
        await Task.Delay(500);

        try
        {
            using var context = await DbFactory.CreateDbContextAsync();
            
            // Buscar usuario sin incluir Empresa primero
            // IMPORTANTE: Ignorar Query Filters durante el login para permitir acceso al SuperAdmin
            var usuario = await context.Usuarios
                .IgnoreQueryFilters()
                .FirstOrDefaultAsync(u => u.Username == loginModel.Username && u.Password == loginModel.Password && u.Activo);

            if (usuario != null)
            {
                // Guardar credenciales si se marc√≥ "Recordar"
                if (rememberMe)
                {
                    await LocalStorage.SetAsync("savedUsername", loginModel.Username);
                    await LocalStorage.SetAsync("savedPassword", loginModel.Password);
                    await LocalStorage.SetAsync("rememberMe", true);
                }
                else
                {
                    // Limpiar credenciales guardadas si no se marc√≥
                    await LocalStorage.DeleteAsync("savedUsername");
                    await LocalStorage.DeleteAsync("savedPassword");
                    await LocalStorage.DeleteAsync("rememberMe");
                }
                
                // Login exitoso
                Console.WriteLine($"üîê LOGIN - Usuario encontrado: {usuario.Username}");
                Console.WriteLine($"   Rol: '{usuario.Rol}'");
                Console.WriteLine($"   EmpresaId: {usuario.EmpresaId?.ToString() ?? "NULL"}");
                
                await SessionStorage.SetAsync("isAuthenticated", true);
                await SessionStorage.SetAsync("username", usuario.Username);
                await SessionStorage.SetAsync("userRole", usuario.Rol);
                await SessionStorage.SetAsync("userId", usuario.Id);
                
                Console.WriteLine($"‚úÖ Datos guardados en SessionStorage");
                Console.WriteLine($"   usuario.Rol == Roles.SuperAdministrador: {usuario.Rol == Roles.SuperAdministrador}");
                
                // Multi-tenant: Guardar EmpresaId si no es SuperAdmin
                if (usuario.Rol != Roles.SuperAdministrador)
                {
                    if (usuario.EmpresaId.HasValue)
                    {
                        await SessionStorage.SetAsync("EmpresaId", usuario.EmpresaId.Value);
                        
                        // Verificar que la empresa est√° activa
                        var empresa = await context.Empresas.FindAsync(usuario.EmpresaId.Value);
                        if (empresa != null && !empresa.Activa)
                        {
                            errorMessage = "La empresa est√° desactivada. Contacte al administrador.";
                            isLoading = false;
                            return;
                        }
                    }
                    else
                    {
                        // Usuario normal debe tener empresa
                        errorMessage = "El usuario no tiene empresa asignada. Contacte al administrador.";
                        isLoading = false;
                        return;
                    }
                }
                
                NavigationManager.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = "Usuario o contrase√±a incorrectos, o usuario inactivo";
                isLoading = false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al iniciar sesi√≥n: {ex.Message}";
            isLoading = false;
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "El usuario es requerido")]
        public string Username { get; set; } = string.Empty;

        [Required(ErrorMessage = "La contrase√±a es requerida")]
        public string Password { get; set; } = string.Empty;
    }
}
